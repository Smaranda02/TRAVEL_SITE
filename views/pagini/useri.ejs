<!DOCTYPE html>
<html  lang="ro">
    <head>
        <meta name="description" content="Wanderworld - users">
        <meta name="keywords" content="WanderWorld, travel, users">
<!--        <link rel="stylesheet" href="/resurse/css/useri.css" type="text/css" />-->
        <title>WanderWorld - users </title>
        <%- include("../fragmente/head") %>     
<!--        <script type="text/javascript" src=/resurse/js/produse.js></script>-->
    </head>
    <body>
    <%- include("../fragmente/header") %>

    <main>
    <div class="afisaj">
        <h2>Useri</h2>

		<table id="useri">
		  <tr>
			<th>id</th><th>Username</th><th>Nume</th><th>Prenume</th><th>Data</th><th>Rol</th>
		  </tr>

		  <% for (var i = 0; i < locals.useri.length; i++) {
				if(useri[i].rol=="comun" || (useri[i].rol=="admin" && useri[i].id!=locals.admin_id) ){
				%>
				<tr>
				  <td><%= useri[i].id %></td>
				  <td><%= useri[i].username %></td>
				  <td><%= useri[i].nume %></td>
				  <td><%= useri[i].email %></td>
				  <%  
					d=new Date(useri[i].data_adaugare)
					sir_data=`${d.getDate()}/${d.getMonth()}/${d.getFullYear()} ${d.getHours()}:${d.getMinutes()}:${d.getSeconds()}`
				  %>
				  <td><%=  sir_data %></td>
				   <td><%=  useri[i].rol %></td>
				</tr> 
   
				<% } %>			
		  <% } %>
		</table>
		
		<p>Delete user</p>
		<form id="sterge" method="post" action="/sterge_utiliz">
			<label>
				Id: <input type="text" name="id_utiliz" value="">
			</label>
			
			<input type="submit" value="Submit">
		</form>
	</div>
</main>


    <%- include("../fragmente/footer") %>

</body>
</html>