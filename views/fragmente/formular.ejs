<!-- enctype e fiindca transmitem si fisiere / poze-->
<!--name-urile din inputuri devin proprietati mai departe de ex in inregistrare.ejs sunt proprietati ale primului argument in parse  -->
<form id="form_inreg"  method="post" class="date"  action="<%= locals.action %>"  enctype="multipart/form-data" >
    <p>
        <label>
            Username: <input type="text" name="username" id="inp-username" value="prof<%= Math.floor(Math.random()*100000) %>" required pattern="[A-Za-z0-9#_./]+">
        </label>
    </p>
    <p>
        <label>
            Nume: <input type="text" name="nume" id="inp-nume"  value="Gogulescu" >
        </label>
    </p>
    <p>
        <label>
            Prenume: <input type="text" name="prenume" id="inp-prenume" value="Gogu"  >
        </label>
    </p>
    <p>
        <label>
            Parola: <input id="parl" type="password" required  name="parola" value="">
        </label>
    </p>
    <p id="p-reintrod">
        <label >
            Reintroduceti parola: <input id="rparl" required type="password" name="rparola" value="">
        </label>
    </p>

    <p>
        <label>
            Email: <input type="text" name="email" id="inp-email" required value="sitewebnici@gmail.com"  size="50">
        </label>
    </p>

    <p>
        <label>
            Data nasterii: <input type="date" name="birth" id="inp-birth" equired value="1970-01-01">
        </label>
    </p>

    <p>
        <label>
            Job:
            <select name="job" id="sel-job">
                <option value="dont wanna say" >dont wanna say</option>
                <option value="doctor" >doctor</option>
                <option value="engineer">engineer</option>
                <option value="lawyer">lawyer</option>
                <option value="police officer">police officer</option>
            </select>
        </label>
    </p>

    <p>
        <label>
            Culoare text chat: <select name="culoare_chat" id="sel-culoare"><option value="red" selected>rosu</option><option value="green">verde</option><option value="blue">albastru</option></select>
        </label>
    </p>
    <p>
        <label>
            Poza: <input type="file" name="poza">
        </label>			
    </p>
    <p>		
        <input id="update_user" type="submit" value="Trimite">  <!--trimite valorilem catre server -->
        <input id="reset_user" type="reset" value="Reseteaza"> <!--reseteaza la vlori default -->
        <input id="user_delete" type="submit" value="Sterge" > <!--sterge user -->


    </p>
</form>